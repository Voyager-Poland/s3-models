{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ESNext",
    "types": [
      "jest"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@abstract/*": [
        "src/abstract/*"
      ],
      "@tokens/*": [
        "src/tokens/*"
      ]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}