{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Add this line
    "emitDecoratorMetadata": true,  // Add this line if you are using Angular
    "noImplicitAny": true,          // Add this line to catch implicit any types
    "typeRoots": ["./node_modules/@types"] // Add this line to specify type definitions directory
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}