{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"sourceMap": true,
		"moduleResolution": "node",
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}